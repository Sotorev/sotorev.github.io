---
import me from "../assets/me.jpg";
import PixelatedImage from "./PixelatedImage.astro";
const { subtitle } = Astro.props;
---

<section id="hero">
  <PixelatedImage src={me.src} alt="Profile" />
  <div class="hero-content">
    <h1>
      {subtitle}
    </h1>
    <span class="scrambled">
      {subtitle}
    </span>
  </div>
</section>

<style>
  #hero {
    width: 100%;
    display: flex;
    gap: clamp(1rem, 4vw, 2rem);
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    font-weight: lighter;
    text-align: left;
    flex: 1;
    min-width: 0; /* Allow text to shrink */
  }

  .hero-content h1 {
    display: none;
  }

  .hero-content span {
    font-size: clamp(1.2rem, 4vw, 3.5rem);
    font-weight: lighter;
    line-height: 1.2;
    margin: 0;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Mobile-first responsive design */
  @media (max-width: 768px) {
    #hero {
      flex-direction: column;
      text-align: left;
      gap: 1.5rem;
    }
    
    .hero-content {
      text-align: left;
    }
    
    .hero-content span {
      font-size: clamp(1rem, 6vw, 2rem);
      line-height: 1.3;
    }
  }

  @media (max-width: 480px) {
    .hero-content span {
      font-size: clamp(0.9rem, 5vw, 1.5rem);
      line-height: 1.4;
    }
  }
</style>
